/* pages/handinhomework/handinhomework.wxss */
#container,#bottom {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}
#bottom{
  background-color: rgb(248, 248, 248);
  height: 100%;
}
#top {
  width: 100vw;
  height: 30%;
  background-color: #ffcccc;
  display: flex;
  justify-content: center;
  align-items: center;
}

#info,.homework-item{
  background-color: #fff;
  border-radius: 30rpx;
  width: 90%;
  height: 80%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.homework-item{
  height: 450rpx;
  margin: 60rpx 0 25rpx;
  flex-direction: column;
  justify-content: flex-start;
  box-shadow: 0 0 10rpx 10rpx rgb(241, 241, 241) ;
}
.homework-item view{
  width: 90%;
}
.info-items {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 0 50rpx;
}

.date {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: #ffcccc;
  color: rgb(255, 255, 255);
  font-weight: bold;
  margin: 0;
  margin-right: 30rpx;
}

#day {
  font-size: 64rpx;
}

.user {
  font-size: 36rpx;
  align-items: flex-start;
}

#name {
  font-size: 48rpx;
  font-weight: bold;
}

#classnum {
  width: 345rpx;
  font-size: 28rpx;
  margin-top:5rpx;
}

.title{
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid rgb(226, 226, 226);
}
.homeworkclass{
  font-size: 40rpx;
  font-weight: bold;
}
.deadline{
  margin: 20rpx 0;
  color: rgb(71, 71, 71);
  font-size: 32rpx;
}
.content{
  height: 40%;
  border-bottom: 1px solid rgb(226, 226, 226);
  margin-bottom: 20rpx;
}
.details{
  display: flex;
  justify-content: center;
  align-items: center;
  color: rgb(71, 71, 71);
}