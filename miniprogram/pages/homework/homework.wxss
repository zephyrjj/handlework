#bottom{
  background-color: rgb(248, 248, 248);
  width: 100vw;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  
}

.homework-item{
  
  background-color: #fff;
  border-radius: 30rpx;
  width: 90%;
  height: 80%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position:relative;
}
.pic_background{
  height: 35%;
  width:25%;
  position:absolute;

  right: 0;
}
.submitted{
  height: 40%;
  width:40%;
  position:absolute;
  bottom: 0;
  right: 0;
}
.homework-item{
  height: 450rpx;
  margin: 50rpx 0 10rpx;
  flex-direction: column;
  justify-content: flex-start;
  box-shadow: 0 0 10rpx 10rpx rgb(241, 241, 241) ;
}
.homework-item view{
  width: 90%;
}

.homeworkclass{
  font-size: 40rpx;
  font-weight: bold;
}
.deadline{
  margin: 20rpx 0 50rpx;
  color: rgb(71, 71, 71);
  font-size: 32rpx;
}
.content{
  height: 20%;
}

.details{
  display: flex;
  margin-top: 30rpx;
  padding-top: 20rpx;
  justify-content: center;
  align-items: center;
  color: rgb(71, 71, 71);
  border-top: 1px solid rgb(226, 226, 226); 
}
.number{
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 50rpx;
}
.submited{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.number-item{
  font-size: 48rpx;
}
.status{
  font-size: 70rpx;
}
#release{
  width: 90%;
  height: 100rpx;
  background-color: #ffcccc;
  font-size: 64rpx;
  text-align: center;
  border-radius: 30rpx;
  margin-top: 50rpx;
  line-height: 100rpx;
  color: #fff;
  font-weight: bold;
}
.title{
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid rgb(226, 226, 226);
}
