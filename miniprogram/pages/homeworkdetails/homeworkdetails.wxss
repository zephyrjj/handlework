/* pages/homeworkdetails/homeworkdetails.wxss */
#container{
  width: 100vw;
  height: 100vh;
  background-color: rgb(248, 248, 248);
  display: flex;
  justify-content: center;
  align-items: center;
}
#homework{
  width: 90%;
  background-color: #fff;
  box-shadow: 0 0 10rpx 10rpx rgb(241, 241, 241) ;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
}
.title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx 30rpx;
}
.title-item{
  font-weight: bold;
  font-size: 48rpx;
}
.title-time{
  color: rgb(148, 148, 148);
}
.deadline{
  margin: 20rpx 30rpx;
  color: rgb(230, 69, 69);
}
.content{
  font-size: 42rpx;
  margin: 20rpx 30rpx;
}
#btncon{
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn{
  width: 90%;
  height: 80rpx;
  background-color: #ffcccc;
  text-align: center;
  line-height: 80rpx;
  border-radius: 30rpx;
  font-size: 50rpx;
  margin-bottom: 20rpx;
}
.homework-textarea{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0;
}
.homework-textarea text{
  width: 90%;
  font-weight: bold;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
textarea{
  border: 1px solid rgb(192, 192, 192);
  padding: 20rpx 20rpx;
  border-radius: 20rpx;
}
.type{
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-items: flex-start;
  align-items: center;
  margin-bottom: 20rpx;
}
.add{
  margin: 0 40rpx;
  padding: 10rpx 10rpx;
  border: 2px dashed #ccc;
}
.add-item{
  height: 100rpx;
  width: 100rpx;
}
.uploaditem{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.uploadblock{
  margin: 10rpx 0 10rpx 40rpx;
  position: relative;
}
.uploadimage{
  width: 120rpx;
  height: 120rpx;
}
.close{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: -20rpx;
  top: -20rpx;
}
.uploadfile{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.uploadfile-item{
  width: 90%;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.fileimg{
  width: 100rpx;
  height: 100rpx;
}
.closefile{
  width: 40rpx;
  height: 40rpx;
}
.uploadfile-item text{
  width: 450rpx;
  word-break: break-all;
  word-wrap: break-word;
  white-space: pre-line;
  margin-right: 20rpx;
}
